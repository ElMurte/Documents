<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="/{{ options.basename }}/favicon.ico">

  <title>Sweleven Documents</title>

  <!-- Bootstrap core CSS -->
  <link href="/{{ options.basename }}/dist/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/{{ options.basename }}/album.css" rel="stylesheet">
</head>

<body>

  <header>
    <div class="collapse bg-dark" id="navbarHeader" style="background-color: #{{ options.color }} !important;">
      <div class="container">
        <div class="row">

          <div class="col-sm-4 offset-md-1 py-4">
            <h4 class="text-white">Branches</h4>
            <ul class="list-unstyled">
              
              <!-- Create link for every branch -->
              {% for branch in options.branches %}
                <li>
                  <a href="{{ branch.path }}">{{ branch.name }}</a>
                </li>
              {% endfor %}

            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="navbar navbar-dark bg-dark box-shadow" style="background-color: #{{ options.color }} !important;">
      <div class="container d-flex justify-content-between">
        <a href="" class="navbar-brand d-flex align-items-center">
          <!-- <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg> -->
          <strong>Documents</strong>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader"
          aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>
  </header>

  <main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">{{ options.page.title }}</h1>
        <p class="lead text-muted">{{ options.page.description }}</p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row">

          <!-- Create a card for every document -->
          {% for element in options.elements %}
            <div class="col-md-4">
                <a href="{{ element.path }}" style="text-decoration: none;">
                    <div class="card mb-4 box-shadow">
                        {% if options.color %}
                          <img class="card-img-top"
                          data-src="holder.js/100px225?theme=thumb&bg={{ options.color }}&fg=eceeef&text={{ element.name }}"
                          alt="Card image cap">
                        {% else %}
                            <img class="card-img-top"
                          data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text={{ element.name }}"
                          alt="Card image cap">
                        {% endif %}
                        <div class="card-body">
                        {# <p class="card-text">{{ element.description }}</p> #}
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional
                            content. This content is a little bit longer.</p>
                        </div>
                    </div>
                </a>
            </div>
          {% endfor %}
        
        </div>
      </div>
    </div>

  </main>

  <!-- Bootstrap core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script>window.jQuery || document.write('<script src="/{{ options.basename }}/assets/jquery-slim.min.js"><\/script>')</script>
  <script src="/{{ options.basename }}/assets/popper.min.js"></script>
  <script src="/{{ options.basename }}/dist/bootstrap.min.js"></script>
  <script src="/{{ options.basename }}/assets/holder.min.js"></script>
</body>

</html>